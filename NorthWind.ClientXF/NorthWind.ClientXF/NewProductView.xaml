<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NorthWind.ClientXF.NewProductView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="NUEVO PRODUCTO:"
                   FontSize="Large"
                   HorizontalOptions="CenterAndExpand"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="ID:"/>
                <Entry x:Name="entryID" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Name:"/>
                <Entry x:Name="entryName" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Price:"/>
                <Entry x:Name="entryPrice" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Units:"/>
                <Entry x:Name="entryUnits" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <Button Text="Save" x:Name="btnSave" Clicked="BtnSave_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>